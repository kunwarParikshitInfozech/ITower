<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:layout_marginRight="12sp"
        android:layout_marginBottom="12sp">

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/cancel_popup">

        </ImageView>
    </RelativeLayout>


    <ScrollView
        android:id="@+id/sv_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="vertical"
            android:background="#FFFFFF"
            android:layout_gravity="center">

            <View

                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/header"/>


            <TextView
                android:id="@+id/tv_last_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="3sp"
                android:paddingLeft="5dp"
                android:text="Last Transaction Date : "
                android:textColor="#2B4E81"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tv_last_qty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="3sp"
                android:paddingLeft="5dp"
                android:text="Last Fill Qty.(Ltrs) : "
                android:textColor="#2B4E81"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tv_last_genset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="3sp"
                android:paddingLeft="5dp"
                android:text="Last Fill Genset Reading : "
                android:textColor="#2B4E81"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tv_last_opening"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="3sp"
                android:paddingLeft="5dp"
                android:text="Last Opning Stock : "
                android:textColor="#2B4E81"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_last_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginBottom="10sp"
                android:paddingLeft="5dp"
                android:text="Last Fill Grid Meter Reading : "
                android:textColor="#2B4E81"
                android:textSize="15sp" />
    </LinearLayout>
    </ScrollView>
</LinearLayout>