<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_page_bg"
    android:orientation="vertical" >

   <LinearLayout
        android:id="@+id/search_by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:id="@+id/tv_search_by_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:text="Search By"
            android:textColor="#2B4E81"
            android:textSize="16sp" />


        <Spinner
            android:id="@+id/sp_search_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="7sp"
            android:layout_marginRight="7sp"
            android:background="@drawable/doted"
            android:ems="10"
            android:minHeight="35sp"
            android:padding="5sp"
            android:prompt="@string/country_prompt"
            android:textSize="15sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/et_searchby_site"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_by"
        android:layout_marginLeft="7sp"
        android:layout_marginRight="7sp"
        android:layout_marginTop="7sp"
        android:background="@drawable/input_box"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890_@/:-\\"
        android:ems="10"
        android:maxLength="20"
        android:minHeight="40sp"
        android:paddingLeft="5sp"
        android:paddingRight="5sp"
        android:singleLine="true"
        android:textColor="@color/input_textcolor"
        android:textSize="15sp" />




    <LinearLayout
        android:id="@+id/ll_tran_type"
        android:layout_below="@+id/et_searchby_site"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:weightSum="6"
        android:visibility="gone">

        <Spinner
            android:id="@+id/sp_tran_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="7sp"
            android:layout_marginRight="7sp"
            android:background="@drawable/doted"
            android:ems="10"
            android:minHeight="35sp"
            android:padding="5sp"
            android:textSize="15sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_vender"
        android:layout_below="@+id/ll_tran_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:weightSum="6"
        android:visibility="gone">

        <Spinner
            android:id="@+id/sp_vender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="7sp"
            android:layout_marginRight="7sp"
            android:background="@drawable/doted"
            android:ems="10"
            android:minHeight="35sp"
            android:padding="5sp"
            android:textSize="15sp" />
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hh_date"
        android:layout_below="@+id/ll_vender"
        android:visibility="gone">

    <LinearLayout
        android:id="@+id/ll_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:layout_marginTop="5sp">

        <TextView
            android:id="@+id/tv_from_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:text="From"
            android:textColor="#2B4E81"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/et_date_from"
            android:layout_width="110sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2sp"
            android:background="@drawable/input_box"
            android:drawableRight="@drawable/calendar_icon"
            android:gravity="center_vertical"
            android:minHeight="35sp"
            android:padding="3dp"
            android:textColor="#000000"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/tv_to_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:text="To"
            android:textSize="14sp"
            android:textColor="#2B4E81"/>

        <TextView
            android:id="@+id/et_date_till"
            android:layout_width="110sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3sp"
            android:background="@drawable/input_box"
            android:drawableRight="@drawable/calendar_icon"
            android:gravity="center_vertical"
            android:minHeight="35sp"
            android:padding="3dp"
            android:textColor="#000000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_apply"
            android:layout_width="60sp"
            android:layout_height="35sp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:background="@drawable/button_9_next"
            android:text="Apply"
            android:textColor="#FFFFFF"
            android:gravity="center"/>
    </LinearLayout >
    </HorizontalScrollView>



    <LinearLayout
        android:id="@+id/ll_sites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hh_date"
        android:orientation="vertical"
        android:layout_marginTop="10sp">

       <!-- <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/pullToRefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">-->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_count"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <!--</android.support.v4.widget.SwipeRefreshLayout>-->
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/textlayout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_sites"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_no_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="No Data found"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>