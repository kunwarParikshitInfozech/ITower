<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_general"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_general"
                    style="@style/defaultText"
                    android:layout_marginBottom="5dp"
                    android:text="General" />
            </LinearLayout>

            <View
                android:id="@+id/vw_aftr_general"
                android:layout_width="fill_parent"
                android:layout_height="0.4dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/divider"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/ll_assignment"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_tt_assign"
                    style="@style/notificationTV"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:text="TT Assignment"
                    android:textColor="@color/grid_item" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ToggleButton
                        android:id="@+id/tb_assign"
                        style="@style/BtToggle" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_updation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_tt_update"
                    style="@style/notificationTV"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:text="TT Updation"
                    android:textColor="@color/grid_item" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ToggleButton
                        android:id="@+id/tb_update"
                        style="@style/BtToggle" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_escalation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_tt_escalate"
                    style="@style/notificationTV"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:text="TT Escalation"
                    android:textColor="@color/grid_item" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ToggleButton
                        android:id="@+id/tb_escalate"
                        style="@style/BtToggle" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_pm_schedule"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_pm_schedule"
                    style="@style/notificationTV"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:text="PM Schedule"
                    android:textColor="@color/grid_item" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ToggleButton
                        android:id="@+id/tb_schedule"
                        style="@style/BtToggle" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_pm_escalate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_pm_escalate"
                    style="@style/notificationTV"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:text="PM Escalation"
                    android:textColor="@color/grid_item" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="right"
                    android:orientation="horizontal">


                    <ToggleButton
                        android:id="@+id/tb_pm_escalate"
                        style="@style/BtToggle" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_pop_up"
                    style="@style/defaultText"
                    android:layout_marginBottom="10dp"
                    android:text="Pop Notification" />
            </LinearLayout>


            <View
                android:layout_width="fill_parent"
                android:layout_height="0.4dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/divider"
                android:orientation="horizontal"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_no_popup"
                            style="@style/notificationTV"
                            android:text="No Popup"
                            android:textColor="@color/grid_item" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rb_no_popup"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginRight="10dp"
                                android:checked="false" />
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_show_popup"
                            style="@style/notificationTV"
                            android:text="Show popup"
                            android:textColor="@color/grid_item" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rb_always"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:checked="false" />
                        </LinearLayout>
                    </LinearLayout>


                </RadioGroup>
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_audio"
                    style="@style/defaultText"
                    android:layout_marginBottom="5dp"
                    android:text="Audio Profile" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.4dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/ll_audio"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_noti_tone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Notification Tone"
                    android:textColor="@color/grid_item" />

                <TextView
                    android:id="@+id/tv_tone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Tone"
                    android:layout_marginLeft="10dp"
                    android:textColor="#A9A9A9"
                    android:textSize="13dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_vibrate"
                    style="@style/notificationTV"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:text="Vibrate"
                    android:textColor="@color/grid_item" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="right"
                    android:orientation="horizontal">


                    <ToggleButton
                        android:id="@+id/tb_vibrate"
                        style="@style/BtToggle" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>