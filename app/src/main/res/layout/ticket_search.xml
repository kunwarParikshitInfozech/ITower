            <LinearLayout
                android:id="@+id/ll_tkt_type_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_tickettype"
                    style="@style/defaultText"
                    android:text="Ticket Type"/>

                <com.isl.SingleSelectSearchable.SearchableSpinner
                    android:id="@+id/sp_tktType"
                    style="@style/defaultSpinner"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_alrm_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_alarm_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12sp"
                    android:layout_marginRight="12sp"
                    android:layout_marginTop="12sp"
                    android:text="Alarm Description"
                    android:textColor="#2B4E81"
                    android:textSize="15sp" />

                <com.isl.SingleSelectSearchable.SearchableSpinner
                    android:id="@+id/sp_alarmDesc"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="12sp"
                    android:layout_marginRight="12sp"
                    android:layout_marginTop="5sp"
                    android:gravity="center_horizontal"
                    android:minHeight="40sp"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_severity_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_sererity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12sp"
                    android:layout_marginRight="12sp"
                    android:layout_marginTop="12sp"
                    android:text="Severity"
                    android:textColor="#2B4E81"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12sp"
                    android:layout_marginRight="12sp"
                    android:layout_marginTop="5sp"
                    android:scrollbars="vertical">

                    <Spinner
                        android:id="@+id/sp_sererity"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:ems="10"
                        android:minHeight="40sp"
                        android:paddingLeft="5sp"
                        android:paddingRight="5sp"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/from"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12sp"
                    android:layout_marginRight="12sp"
                    android:layout_marginTop="12sp"
                    android:text=""
                    android:textColor="#2B4E81"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_from_Date"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12sp"
                    android:layout_marginRight="12sp"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/input_box"
                    android:drawableRight="@drawable/calendar_icon"
                    android:gravity="center_vertical"
                    android:minHeight="40sp"
                    android:padding="5dp"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/to"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12sp"
                    android:layout_marginRight="12sp"
                    android:layout_marginTop="12sp"
                    android:text=""
                    android:textColor="#2B4E81"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_to_Date"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12sp"
                    android:layout_marginLeft="12sp"
                    android:layout_marginRight="12sp"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/input_box"
                    android:drawableRight="@drawable/calendar_icon"
                    android:gravity="center_vertical"
                    android:minHeight="40sp"
                    android:padding="5dp"
                    android:textColor="#000000"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_search_by"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_search_by"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12sp"
                    android:layout_marginRight="12sp"
                    android:layout_marginTop="12sp"
                    android:text="Search By"
                    android:textColor="#2B4E81"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40sp"
                    android:layout_marginLeft="12sp"
                    android:layout_marginRight="12sp"
                    android:layout_marginTop="5sp"
                    android:scrollbars="vertical">

                    <Spinner
                        android:id="@+id/sp_search_by"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:ems="10"
                        android:minHeight="40sp"
                        android:paddingLeft="5sp"
                        android:paddingRight="5sp"
                        android:textSize="15sp" />

                   <!-- <ImageView
                        android:layout_width="30dip"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:paddingBottom="6sp"
                        android:paddingLeft="9sp"
                        android:src="@drawable/drop" />-->
                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@color/bottom"
        android:orientation="horizontal"
        android:scrollbars="vertical"
        android:weightSum="2"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/btn_search_ticket"
            style="@style/ButtonDefault"
            android:text="Search"
            android:gravity="center"/>
      </LinearLayout>
    </LinearLayout>
