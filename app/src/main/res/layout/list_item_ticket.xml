<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/relative_main"
    android:layout_height="wrap_content"
    android:background="@drawable/list_bg" >


    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/ticket_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/txt_ticket_id"
            style="@style/scheduletabSiteId" />

        <TextView
            android:id="@+id/txt_site_id"
            android:layout_below="@+id/txt_ticket_id"
            style="@style/scheduletabActivityType"
            android:text="Site Id"
            />

        <TextView
            android:id="@+id/txt_ticket_status"
            style="@style/scheduletabActivityType"
            android:layout_below="@+id/txt_site_id"
            android:text="Critical"
            />

        <TextView
            android:id="@+id/txt_description"
            android:layout_below="@+id/txt_ticket_status"
            style="@style/scheduletabActivityType"
            android:text="Alarm Description"
            />

        <TextView
            android:id="@+id/txt_fLevel"
            android:layout_below="@+id/txt_description"
            style="@style/scheduletabActivityType"
            android:text="First Level Approval"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txt_sLevel"
            android:layout_below="@+id/txt_fLevel"
            style="@style/scheduletabActivityType"
            android:text="Second Level Approval"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txt_date"
            style="@style/scheduletabDate"
            android:layout_below="@+id/txt_site_id"
            android:text="03 sep, 2014"
            android:layout_alignRight="@+id/txt_ticket_status"
            />

    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:visibility="gone"
        android:id="@+id/relative_ra"
        android:gravity="end"
        android:layout_below="@id/ticket_info"
        android:layout_alignParentRight="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:textAllCaps="false"
            android:background="@color/orange"
            android:id="@+id/btn_reject"
            android:text="Reject"
            android:textColor="@color/white"
            android:layout_width="120dp"
            android:layout_height="30dp"/>

        <Button
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginLeft="2dp"
            android:background="@color/orange"
            android:layout_toRightOf="@id/btn_reject"
            android:id="@+id/btn_acknowledge"
            android:text="Acknowledge"
            android:layout_width="120dp"
            android:layout_height="30dp"/>
    </RelativeLayout>

    <View
        android:background="@color/disable_textcolor"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</RelativeLayout>