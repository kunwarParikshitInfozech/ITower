<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_white"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_header_existing_ticket"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/header" >

        <Button
            android:id="@+id/bt_back"
            style="@style/tabBackButton"/>

        <TextView
            android:id="@+id/tv_header"
            style="@style/tabHeaderTextView"/>

    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="vertical" >

            <TextView
                android:id="@+id/tv_siteId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/et_site_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <LinearLayout
                android:id="@+id/ll_textview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:scrollbars="vertical" >
            </LinearLayout>

            <TextView
                android:id="@+id/tv_spare_parts"
                style="@style/linkTextView"
                android:text="View Spare Parts"
                android:visibility="gone" />
            
            <TextView
                android:id="@+id/tv_pre_images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />

            <LinearLayout
                android:id="@+id/ll_pre_image"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:scrollbars="vertical"
                android:visibility="visible" >

                <com.isl.itower.ExpandableHeightGridView
                    android:id="@+id/list_pre_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnWidth="250dp"
                    android:gravity="center"
                    android:horizontalSpacing="1dp"
                    android:isScrollContainer="false"
                    android:listSelector="@android:color/transparent"
                    android:numColumns="1"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="3dp"
                    android:visibility="gone"/>


                <ImageView
                    android:id="@+id/no_pre_media"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginTop="10sp"
                    android:padding="1sp"
                    android:visibility="gone"
                    android:layout_gravity="center"/>
            </LinearLayout>
            
             <TextView
                android:id="@+id/tv_post_images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />

            <LinearLayout
                android:id="@+id/ll_image"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:scrollbars="vertical"
                android:visibility="gone" >

                <com.isl.itower.ExpandableHeightGridView
                    android:id="@+id/list_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnWidth="250dp"
                    android:gravity="center"
                    android:horizontalSpacing="1dp"
                    android:isScrollContainer="false"
                    android:listSelector="@android:color/transparent"
                    android:numColumns="1"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="3dp"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/no_media"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginTop="10sp"
                    android:padding="1sp"
                    android:visibility="gone"
                    android:layout_gravity="center"/>
              </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@color/bottom"
                android:orientation="horizontal"
                android:scrollbars="vertical"
                android:weightSum="2"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_submit"
                    style="@style/ButtonDefault"
                    android:text="Submit"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tv_reject"
                    style="@style/ButtonSecondary"
                    android:text="Reject"
                    android:gravity="center"/>

