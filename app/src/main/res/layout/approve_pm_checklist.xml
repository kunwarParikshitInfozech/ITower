        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl_n_data"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_header_ticket_list"
        android:layout_centerInParent="true"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tv_no_data"
            style="@style/noDataFoundTV"/>
    </RelativeLayout>

</LinearLayout>