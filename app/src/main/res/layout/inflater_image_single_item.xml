<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_210sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_margin="@dimen/_5sdp"
        android:elevation="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp"
        app:cardBackgroundColor="@color/white"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                app:srcCompat="@drawable/delete_icon"
                android:id="@+id/iv_remove"
                android:padding="@dimen/_10sdp"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/rl_img"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/iv_remove"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/_160sdp"
                    android:id="@+id/iv_captured"
                    android:scaleType="fitXY"
                    android:layout_height="@dimen/_120sdp"/>

                <ImageView
                    android:layout_width="@dimen/_40sdp"
                    app:srcCompat="@drawable/fullview"
                    android:id="@+id/iv_full_view"
                    android:layout_centerInParent="true"
                    android:layout_height="@dimen/_40sdp"/>

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@+id/rl_img"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_11ssp"
                android:id="@+id/tv_lat"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@+id/tv_lat"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_11ssp"
                android:id="@+id/tv_long"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@+id/tv_long"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_11ssp"
                android:id="@+id/tv_timestamp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_below="@+id/tv_timestamp"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textSize="@dimen/_11ssp"
                android:id="@+id/tv_img_tag"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_height="wrap_content"/>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>