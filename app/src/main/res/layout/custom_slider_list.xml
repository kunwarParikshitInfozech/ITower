<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        style="@style/sliderItemlayout" >


        <TextView
            style="@style/sliderTextView"
            android:id="@+id/tv_home"
            android:text="Home"

            />

        <TextView
            style="@style/sliderItemDivider"/>

        <TextView
            style="@style/sliderTextView"
            android:id="@+id/tv_site_ava_summary"
            android:text="Site Availability Summary"

            />

        <TextView
            style="@style/sliderItemDivider"/>

        <TextView
            android:id="@+id/tv_equip_summary"
            android:text="Equipment Wise Alarm Summary"
            style="@style/sliderTextView"
            />

        <TextView
            style="@style/sliderItemDivider"/>

        <TextView
            android:id="@+id/tv_fre_alarm"
            android:text="Most Frequently Alarm"
            style="@style/sliderTextView"

            />
        <!-- <TextView
            android:id="@+id/tv_select_lang"
            style="@style/selectlanguageTV"
            />-->


        <TextView
            style="@style/sliderItemDivider"/>

        <TextView
            android:id="@+id/tv_open_alarm"
            android:text="Open Alarm Summary"
            style="@style/sliderTextView"

            />

        <TextView
            style="@style/sliderItemDivider"/>

        <TextView
            android:id="@+id/tv_problematic"
            android:text="Critical Alarm Site"
            style="@style/sliderTextView"

            />

        <TextView
            style="@style/sliderItemDivider"/>



    </LinearLayout>
</LinearLayout>
