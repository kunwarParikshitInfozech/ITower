<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000"
    android:orientation="vertical"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_centerVertical="true"
        android:background="@color/header"
        >

        <TextView
            android:id="@+id/tv_rej_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rejection Reason"
            android:textColor="@color/over_textcolor"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="5dp"
            android:src="@drawable/abs__ic_clear_normal">

        </ImageView>
    </RelativeLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="vertical"
            android:background="@color/bg_color_white"
            android:layout_gravity="center"
            >

           <TextView
                android:id="@+id/tv_category"
                android:text="Category"
                style="@style/defaultText"/>


            <Spinner
                android:id="@+id/sp_rmk_category"
                style="@style/defaultSpinner"/>


            <TextView
                android:id="@+id/tv_remarks"
                android:text="Remarks"
                style="@style/defaultText"/>


            <EditText
                android:id="@+id/et_reject_remarks"
                style="@style/defaultInputText"/>

            <LinearLayout
                android:id="@+id/ll_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@color/bottom"
                android:orientation="horizontal"
                android:scrollbars="vertical"
                android:weightSum="2"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/tv_submit"
                    style="@style/ButtonDefault"
                    android:text="Submit"
                    android:gravity="center"/>

                <!-- <Button
                     android:id="@+id/button_submit"
                     android:layout_width="wrap_content"
                     android:layout_height="40dp"
                     android:layout_centerHorizontal="true"
                     android:layout_marginTop="10dp"
                     android:background="@drawable/send"
