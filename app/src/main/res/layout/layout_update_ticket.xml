                    android:id="@+id/tv_status_reason"
                    style="@style/defaultText"
                    android:text="Status Reason" />

                <com.isl.SingleSelectSearchable.SearchableSpinner
                    android:id="@+id/sp_status_reason"
                    style="@style/defaultSpinner" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_resolution_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
