                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_problem_end_date"
                    style="@style/defaultText"
                    android:text="Problem End Date" />

                <TextView
                    android:id="@+id/txt_problem_end_date"
                    style="@style/scheduletabSearchByDate" />

                <TextView
                    android:id="@+id/tv_problem_end_time"
                    style="@style/defaultText"
                    android:text="Problem End Time" />

                <TextView
                    android:id="@+id/txt_problem_end_time"
                    style="@style/scheduletabSearchByDate" />
            </LinearLayout>

            <LinearLayout
