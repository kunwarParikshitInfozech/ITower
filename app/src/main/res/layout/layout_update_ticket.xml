                    android:text="Operator Exempted" />


                <TextView
                    android:id="@+id/sp_operator_exempted"
                    style="@style/defaultInputText"
                    android:text="Select Operator Exempted" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_effected_sites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_dependent_site"
                    style="@style/defaultText"
                    android:text="Effected Sites" />

                <EditText
                    android:id="@+id/et_dependent_site"
                    style="@style/defaultInputText"
                    android:digits="1234567890"
                    android:inputType="numberSigned"
                    android:maxLength="3" />
            </LinearLayout>

            <LinearLayout
