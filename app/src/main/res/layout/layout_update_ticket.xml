                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_dis_Date"
                    style="@style/defaultText"
                    android:text="Battery Discharge Start Date" />

                <TextView
                    android:id="@+id/tv_dis_bttry_Date"
                    style="@style/scheduletabSearchByDate" />

                <TextView
                    android:id="@+id/tv_dis_time"
