<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/relativelayout"
    android:layout_height="wrap_content"
    android:background="@drawable/list_bg" >

    <TextView
        android:id="@+id/txt_site_id"
        style="@style/scheduletabSiteId"
        />

    <TextView
        android:textStyle="bold"
        android:visibility="gone"
        android:id="@+id/txt_pmNote"
        android:layout_below="@+id/txt_site_id"
        style="@style/scheduletabStatus" />

    <TextView
        android:id="@+id/txt_txn_id"
        style="@style/scheduletabStatus"
        android:visibility="gone"
        android:layout_below="@id/txt_pmNote"/>

    <TextView
        android:id="@+id/txt_date"
        style="@style/scheduletabDate"
        android:layout_below="@+id/txt_txn_id"/>

   <TextView
        android:id="@+id/txt_rp_date"
        style="@style/scheduletabDate"
        android:textSize="14dp"
        android:layout_below="@+id/txt_date"/>

    <TextView
        android:id="@+id/txt_dgtype"
        style="@style/scheduletabDate"
        android:textSize="14dp"
        android:visibility="gone"
        android:layout_below="@+id/txt_rp_date"/>

    <TextView
        android:id="@+id/txt_generator_status"
        style="@style/scheduletabStatus"
        android:text="Generator Status"
        android:layout_below="@+id/ticket_info"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txt_link"
        style="@style/scheduletabStatus"
        android:text="Add Accesss Management Request"
        android:layout_below="@+id/txt_generator_status"
        android:textColor="@color/link_textcolor"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/ticket_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/txt_date"
        android:layout_below="@+id/txt_txn_id">

        <TextView
            android:id="@+id/txt_checklist_type"
            style="@style/scheduletabActivityType" />

        <TextView
            android:id="@+id/txt_status"
            android:layout_below="@+id/txt_checklist_type"
            style="@style/scheduletabStatus" />

        <TextView
            android:id="@+id/txt_ttikd"
            android:visibility="gone"
            android:layout_below="@+id/txt_status"
            style="@style/scheduletabStatus" />
    </RelativeLayout>
</RelativeLayout>