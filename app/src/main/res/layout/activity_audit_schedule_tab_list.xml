<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_page_bg"
    >
<RelativeLayout
        android:id="@+id/rl_header_ticket_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#456ca4" >

        <Button
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:background="#456ca4"
            android:text="@string/back"
            android:textColor="#FFFFFF"
            android:padding="13sp"
            android:drawableLeft="@drawable/back"
            android:layout_height="wrap_content"
             />

        <TextView
            android:id="@+id/tv_brand_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/schedule"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
             />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_textlayout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_header_ticket_list"
        android:layout_centerInParent="true"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tv_no_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="NO DATA FOUND"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"
            android:textStyle="bold" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_header_ticket_list"
        android:background="@android:color/white"
        android:cacheColorHint="@android:color/transparent"
        android:scrollingCache="false" >
    </ListView>

</RelativeLayout>