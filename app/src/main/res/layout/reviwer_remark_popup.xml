<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >
    
    
    <TextView
        android:id="@+id/remark"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:gravity="center"
        android:paddingLeft="3sp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="#456ca4"
         />
    
   <TextView
        android:id="@+id/tv_vi_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="3sp"
         android:layout_below="@+id/remark"
        android:text="Remarks"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:layout_marginTop="10sp" />

    <EditText
        android:id="@+id/et_visiter_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_vi_remark"
        android:layout_margin="2sp"
        android:background="@drawable/custom_border"
        android:minHeight="40sp"
        android:textColor="#000000"
        android:paddingLeft="15sp"
        android:text=""
        android:layout_marginTop="3sp"/>
    
    <TextView
        android:id="@+id/tv_ri_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
         android:paddingLeft="3sp"
        android:text="Reviewer Remarks"
        android:layout_below="@+id/et_visiter_remark"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:layout_marginTop="10sp" />
    
    <EditText
        android:id="@+id/et_reviewer_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_ri_remark"
        android:layout_margin="2sp"
        android:background="@drawable/custom_border"
        android:minHeight="40sp"
        android:paddingLeft="5sp"
        android:textColor="#000000"
        android:layout_marginTop="3sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#59ae8d"
        android:minHeight="40sp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center"
        android:layout_below="@+id/et_reviewer_remark"
        android:layout_marginTop="20sp" >
        
         <Button
            android:id="@+id/bt_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/send"
            android:minHeight="35sp"
            android:padding="5dp"
            android:text="OK"
            android:textStyle="bold" 
            android:textColor="#ffffff"/> 
  </LinearLayout>
</RelativeLayout>