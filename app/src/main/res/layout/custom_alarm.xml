<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_bg" >

    <RelativeLayout
        android:id="@+id/ticket_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/txt_since"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_date"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Since"
            android:textColor="@color/grid_item"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_descriptions"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:text="Date"
            android:textColor="@color/grid_item" />

        <TextView
            android:id="@+id/txt_descriptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Description"
            android:textColor="@color/grid_item" />

        <TextView
            android:id="@+id/txt_alamType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txt_date"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="TextView"
            android:textColor="@color/grid_item" />
    </RelativeLayout>

</RelativeLayout>