<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_white">

    <RelativeLayout
        android:id="@+id/rl_header_ticket_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/header">

        <Button
            android:id="@+id/button_back"
            style="@style/tabBackButton" />

        <TextView
            android:id="@+id/tv_brand_logo"
            style="@style/tabHeaderTextView" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_textlayout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_header_ticket_list"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_no_ticket"
            style="@style/noDataFoundTV"
            android:text="No Notification Found" />
    </RelativeLayout>


    <ListView
        android:id="@+id/lv_notification"
        style="@style/scheduleListView">

    </ListView>
</RelativeLayout>