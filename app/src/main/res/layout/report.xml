<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_page_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_header_existing_ticket"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#456ca4" >

        <Button
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:background="#456ca4"
            android:text="Back"
            android:padding="13dp"
            android:textColor="#FFFFFF"
            android:drawableLeft="@drawable/back"
            android:layout_height="wrap_content"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_brand_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Reports"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:paddingLeft="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_header_existing_ticket"
        android:orientation="vertical" >
        
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:clickable="true"
            android:padding="15dp"
            android:text="Site Audit Report"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black" 
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_site_audit_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_border_state"
            android:clickable="true"
            android:drawableEnd="@drawable/next"
            android:padding="15dp"
            android:layout_margin="1dp"
            android:text="Site Audit Status"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black" 
            android:layout_marginTop="20sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_missing_asset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@drawable/custom_border_state"
            android:drawableEnd="@drawable/next"
            android:padding="15dp"
            android:text="List of Missing Assets"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_audit_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@drawable/custom_border_state"
            android:drawableEnd="@drawable/next"
            android:padding="15dp"
            android:text="Site Audit Summary"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"
            android:visibility="gone" />

      </LinearLayout>

</RelativeLayout>